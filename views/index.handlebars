<div class="container">
    <h1>Burgers!</h1>
    <div class="row">
        <div class="col-4 mx-auto">
            <img src="./assets/img/burger.png" alt="Image" class="w-100">
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <h2 class="text-center">Available burgers.</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}<button>Eat it!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-6">
            <h2 class="text-center">Devoured burgers!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-6 mx-auto">

            <h2 class="text-center">Add New Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burgerForm">Burger Name:</label>
                    <input type="text" id="burgerForm" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>